#!/usr/bin/env bash
apt update
apt install haproxy -y

echo "ENABLED=1" >> /etc/default/haproxy
echo "backend web_backend
    balance roundrobin
    server 507480-web-01 54.144.238.161:80 check
    server 507480-web-01 54.144.238.161:80 check
    frontend http
        bind *:80
        mode http
        default_backend web_backend" >> /etc/haproxy/haproxy.cfg
service haproxy restart
