#!/usr/bin/env bash
chown nginx:nginx /etc/nginx/nginx.conf
chmod u+rw /etc/nginx/nginx.conf
sudo -u nginx sed -i 's/^#user .*$/user nginx nginx;/' /etc/nginx/nginx.conf
sudo -u nginx sed -i '/^.listen 80.*;/a	listen *:8080;'  /etc/nginx/sites-available/default
pkill apache2
sudo -u nginx service nginx restart
